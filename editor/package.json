{
  "name": "sing-land-editor",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start:ng": "wireit",
    "start:electron": "wireit",
    "build:ng": "wireit",
    "before-pack": "wireit",
    "pack": "wireit"
  },
  "wireit": {
    "start:ng": {
      "command": "ng serve --port 8020"
    },
    "start:electron": {
      "command": "echo You need to run the following commands: npx electron . --port 8020 --path=<path>"
    },
    "build:ng": {
      "command": "ng build --aot --base-href ./"
    },
    "before-pack": {
      "command": "mkdir .package && mv dist/sing-land-editor/* .package/ && cp package.json .package/ && cp main.js .package/",
      "dependencies": [
        "build:ng"
      ]
    },
    "pack": {
      "command": "asar pack .package editor.asar",
      "dependencies": [
        "before-pack"
      ]
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.1.0",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/forms": "~13.1.0",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/router": "~13.1.0",
    "chokidar": "^3.5.3",
    "monaco-editor": "^0.34.0",
    "monaco-editor-webpack-plugin": "^7.0.1",
    "rxjs": "~7.8.0",
    "sweetalert2": "^11.7.3",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^13.1.0",
    "@angular-devkit/build-angular": "~13.1.3",
    "@angular/cli": "~13.1.3",
    "@angular/compiler-cli": "~13.1.0",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^18.7.13",
    "asar": "^3.2.0",
    "electron": "^21.0.1",
    "jasmine-core": "~3.10.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.5.2",
    "wireit": "^0.9.5"
  }
}
