{
  "name": "singland",
  "version": "1.0.0",
  "description": "A GUI for sing-box",
  "homepage": "https://github.com/net-breaker/sing-land",
  "repository": "https://github.com/net-breaker/sing-land",
  "author": "anonysoul <i@anonysoul.com>",
  "main": "main.js",
  "scripts": {
    "tsc": "wireit",
    "start": "wireit",
    "build": "wireit"
  },
  "wireit": {
    "tsc": {
      "command": "tsc main.ts && tsc application.ts",
      "remark":"https://github.com/microsoft/TypeScript/issues/911"
    },
    "start": {
      "command": "electron .",
      "dependencies": [
        "tsc"
      ]
    },
    "build": {
      "command": "electron-builder build",
      "dependencies": [
        "tsc"
      ]
    }
  },
  "dependencies": {
    "electron-context-menu": "^3.5.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.3",
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0",
    "typescript": "^5.0.2",
    "wireit": "^0.9.5"
  }
}
